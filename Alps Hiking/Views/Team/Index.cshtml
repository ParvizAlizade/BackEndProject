@model List<Team>
@{
    ViewData["Title"] = "Team Page";
    List<Slider> sliders = ViewBag.Slider;
}

@section Link {
    <link rel="stylesheet" href="~/assets/scss/team.css">
}


<main>
    <section id="slider">
        <div class="content">
            <div class="image">
                <img src="~/assets/images/slider/@sliders.Find(s=>s.Title=="Team").ImagePath" alt="">
            </div>
            <h1>Our Team</h1>
        </div>
    </section>


    <section id="team">
        <div class="allteam">
            <div class="container">
                <div class="row d-flex">
                    @foreach (Team item in Model)
                    {
                        <div class="col-lg-4">
                            <div class="cardd">
                                <div class="image">
                                    <img src="~/assets/images/teammembers/@item.ImagePath" alt="">
                                </div>

                                <div class="about">
                                    <h5>@item.Name</h5>
                                    <p>@item.Profession.Name</p>
                                    <hr>
                                    <span>@item.About</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script src="~/assets/js/team.js"></script>
}