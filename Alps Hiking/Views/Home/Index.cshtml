                            <div class="line"></div>
                            <p>
                            @Html.Raw(layoutservice.GetSettings().FirstOrDefault(s=>s.Key == "WhyChooseUsDesc")?.Value)
                            </p>
                            <div class="button">
                                <button class="glowing-btn">
                                    <a style="text-decoration:none;color:black" asp-controller="Contact" asp-action="Index"> <span>Learn More</span></a>
                                </button>
                            </div>
                        </div>
                        <div class="imageside d-lg-block col-lg-6 col-md-6">
                        <img style="width: 100%; height: 100%; object-fit: cover;" src="~/assets/images/SectionImages/Untitled-2.png" alt="">
                        </div>
                    
                </div>
