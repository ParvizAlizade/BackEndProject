@model HomeViewModel
@inject Alps_Hiking.Services.LayoutService layoutservice

@{
    ViewData["Title"] = "Home Page";
}


@section Link {
    <link rel="stylesheet" href="~/assets/scss/style.css">
}
<main>
    <section id="slider">
            <div class="mainphoto">
                <img src="~/assets/images/slider/@(Model.Slider.Find(x=>x.Title=="Alps Hiking").ImagePath)" alt="">
                <a asp-action="Index" asp-controller="Tour"><button class="btn button btn-dark">@Model.Slider.Find(x=>x.Title=="Alps Hiking").Button</button></a>
            </div> 
            <div class="content">
                <img class="first" src="~/assets/images/slider/hiking-slider-text-1.png" alt="">
                <img class="second" src="~/assets/images/slider/hiking-slider-text-2-1.png" alt="">
            </div>
        <div class="announce d-lg-block d-sm-none d-md-none text-center">
            @foreach (Destiantion item in Model.Destiantion)
            {
                <h3>@item.Name</h3>
            }
        </div>
    </section>


    <section id="WhyChooseUs">
        <div class="contentside">
            <div class="container">
                <div class="row d-flex">
                 
